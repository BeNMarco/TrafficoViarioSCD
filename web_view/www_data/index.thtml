	function traslladar(a, b) {
		var center = paper.project.view.center;
		var desX = (a.x - b.x);
		var desY = (a.y - b.y);

		var newCenter = [ center.x + desX, center.y + desY ];
		return newCenter;
	}

	function zoomIn() {
		view.zoom = view.zoom * 1.1;
